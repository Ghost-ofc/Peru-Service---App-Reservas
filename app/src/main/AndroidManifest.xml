<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    
    <!-- Características de cámara -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppReservas"
        android:forceDarkAllowed="false"
        tools:targetApi="31">
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".ui.CatalogoActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.DetalleDestinoActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.CatalogoActivity" />

        <activity
            android:name=".ui.FiltrosActivity"
            android:parentActivityName=".ui.CatalogoActivity" />

        <!-- HU-002: Reserva -->
        <activity
            android:name=".ui.ReservasActivity"
            android:parentActivityName=".ui.CatalogoActivity" />

        <!-- HU-003: Pago y voucher -->
        <activity
            android:name=".ui.PagoActivity"
            android:parentActivityName=".ui.ReservasActivity" />

        <activity
            android:name=".ui.ReciboActivity"
            android:launchMode="singleTask"
            android:parentActivityName=".ui.CatalogoActivity" />

        <activity
            android:name=".ui.RegistroActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.LoginActivity" />

        <activity
            android:name=".ui.PanelPrincipalActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" />

        <activity
            android:name=".ui.PanelGuiaActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Detalle Tour -->
        <activity
            android:name=".ui.DetalleTourActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Escaneo QR -->
        <activity
            android:name=".ui.EscaneoQRActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppReservas.NoActionBar" />

        <!-- Lista Participantes -->
        <activity
            android:name=".ui.ListaParticipantesActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Notificaciones -->
        <activity
            android:name=".ui.NotificacionesActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppReservas" />

        <!-- Recompensas y Perfil (HU-007) -->
        <activity
            android:name=".ui.RecompensasActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppReservas"
            android:parentActivityName=".ui.CatalogoActivity" />

        <!-- Actividad de captura de ZXing -->
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="fullSensor"
            tools:replace="android:screenOrientation" />



    </application>

</manifest>