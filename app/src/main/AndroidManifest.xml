<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32"/>
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"/>
    <uses-feature android:name="android.hardware.camera" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppReservas"
        android:forceDarkAllowed="false"
        tools:targetApi="31">
        
        <!-- Activity principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Registro -->
        <activity
            android:name=".ui.RegistroActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.LoginActivity" />

        <!-- Panel Principal -->
        <activity
            android:name=".ui.PanelPrincipalActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" />

        <!-- Panel Guía/Administrador -->
        <activity
            android:name=".ui.PanelGuiaActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Detalle Tour -->
        <activity
            android:name=".ui.DetalleTourActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.PanelGuiaActivity" />

        <!-- Escaneo QR -->
        <activity
            android:name=".ui.EscaneoQRActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.DetalleTourActivity" />

        <!-- Catálogo de destinos -->
        <activity
            android:name=".ui.CatalogoActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Detalle de destino -->
        <activity
            android:name=".ui.DetalleDestinoActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.CatalogoActivity" />

        <!-- Reservas -->
        <activity
            android:name=".ui.ReservasActivity"
            android:parentActivityName=".ui.DetalleDestinoActivity" />

        <!-- Pago -->
        <activity
            android:name=".ui.PaymentActivity"
            android:parentActivityName=".ui.ReservasActivity" />

        <!-- Voucher/Comprobante -->
        <activity
            android:name=".ui.VoucherActivity"
            android:parentActivityName=".ui.PaymentActivity" />

        <!-- Notificaciones -->
        <activity
            android:name=".ui.NotificacionesActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Recompensas -->
        <activity
            android:name=".ui.RecompensasActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Álbum del Tour (HU-008) -->
        <activity
            android:name=".ui.AlbumTourActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Subir Fotos (HU-008) -->
        <activity
            android:name=".ui.SubirFotosActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.AlbumTourActivity" />

        <!-- Encuesta de Satisfacción (HU-009) -->
        <activity
            android:name=".ui.EncuestaActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

    </application>

</manifest>
