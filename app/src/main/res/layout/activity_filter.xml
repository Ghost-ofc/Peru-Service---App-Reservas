<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_close_24"
        app:navigationIconTint="@color/color_primary"
        app:title="Filtros"
        app:titleCentered="true"
        app:titleTextColor="@color/color_text"
        android:backgroundTint="@color/color_surface"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refina tu bÃºsqueda de destinos"
            android:textColor="@color/color_text_muted"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rango de precio"
            android:textStyle="bold"
            android:textColor="@color/color_text"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/spinnerRangoPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:hint="Todos los precios"
            android:padding="12dp"
            android:background="@drawable/bg_field_outline"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disponibilidad"
            android:textStyle="bold"
            android:textColor="@color/color_text"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/radioGroupDisponibilidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Todos"
                android:checked="true"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Solo con cupos disponibles"/>
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAplicarFiltros"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aplicar filtros"
            app:cornerRadius="24dp"
            app:backgroundTint="@color/color_primary"
            android:textColor="@color/color_on_primary"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
