<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tour_nombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Machu Picchu Tour Completo"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_tour_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendiente"
                android:background="@drawable/bg_chip_pendiente"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:textSize="12sp"
                android:textColor="#D97706" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_tour_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27 Oct 2025 â€¢ 08:00 AM"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_calendar" />

        <TextView
            android:id="@+id/tv_tour_punto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plaza de Armas, Cusco"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_location" />

        <TextView
            android:id="@+id/tv_tour_participantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 turistas registrados"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_group" />

        <Button
            android:id="@+id/btn_ver_detalles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_button_primary"
            android:text="Ver detalles"
            android:textColor="@android:color/white" />

    </LinearLayout>

</androidx.cardview.widget.CardView>