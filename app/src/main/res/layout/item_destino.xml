<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Imagen del destino -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/imgDestino"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Imagen del destino"/>

            <!-- Favorito (opcional) -->
            <ImageView
                android:id="@+id/imgFavorito"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="top|end"
                android:layout_margin="12dp"
                android:src="@drawable/ic_favorite_border_24"
                android:tint="@android:color/white"
                android:visibility="gone"/>
        </FrameLayout>

        <!-- Contenido de la card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título y precio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/txtNombre"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_text"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/txtPrecio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_text"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="por persona"
                        android:textSize="11sp"
                        android:textColor="@color/color_text_muted"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Ubicación -->
            <TextView
                android:id="@+id/txtUbicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/color_text_muted"
                android:drawableStart="@android:drawable/ic_menu_mylocation"
                android:drawablePadding="4dp"
                android:drawableTint="@color/color_text_muted"
                android:layout_marginBottom="8dp"/>

            <!-- Descripción corta -->
            <TextView
                android:id="@+id/txtDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/color_text_muted"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="12dp"/>

            <!-- Info: duración, personas, calificación -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/txtDuracion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textColor="@color/color_text"
                    android:drawableStart="@android:drawable/ic_menu_recent_history"
                    android:drawablePadding="4dp"
                    android:drawableTint="@color/color_text_muted"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/txtMaxPersonas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textColor="@color/color_text"
                    android:drawableStart="@android:drawable/ic_menu_myplaces"
                    android:drawablePadding="4dp"
                    android:drawableTint="@color/color_text_muted"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Calificación y cupos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/txtCalificacion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textColor="@color/color_text"
                    android:drawableStart="@android:drawable/btn_star_big_on"
                    android:drawablePadding="4dp"
                    android:drawableTint="#FFC107"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/txtCupos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_success_fg"/>
            </LinearLayout>

            <!-- Botón Ver detalles -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerDetalles"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Ver detalles"
                android:textAllCaps="false"
                android:textSize="14sp"
                app:cornerRadius="8dp"
                app:backgroundTint="@color/color_primary"
                android:textColor="@color/color_on_primary"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>