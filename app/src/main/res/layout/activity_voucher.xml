<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">

    <!-- Top Bar personalizado -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/color_surface"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back_24"
            android:tint="@color/color_text"
            android:layout_marginEnd="16dp"/>

        <!-- Logo circular -->
        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_logo_bg"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Peruvian Service"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/color_text"
            android:layout_marginStart="12dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_favorite_border_24"
            android:tint="@color/color_text"
            android:layout_marginEnd="12dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_person_24"
            android:tint="@color/color_text"/>
    </LinearLayout>

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="72dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Ícono de check circular -->
            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/bg_check_success"
                android:layout_marginBottom="20dp"/>

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Reserva confirmada!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/color_text"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tu pago ha sido procesado exitosamente"
                android:textSize="14sp"
                android:textColor="@color/color_text_muted"
                android:layout_marginBottom="24dp"/>

            <!-- Código de confirmación -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Código de confirmación"
                android:textSize="13sp"
                android:textColor="@color/color_text_muted"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/txtCodigoConfirmacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PS32786990"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/color_primary"
                android:letterSpacing="0.05"
                android:layout_marginBottom="28dp"/>

            <!-- Card de detalles -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Nombre del destino -->
                    <TextView
                        android:id="@+id/txtDestinoNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tour Machu Picchu Clásico"
                        android:textStyle="bold"
                        android:textColor="@color/color_text"
                        android:textSize="18sp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Fecha -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Fecha:"
                            android:textSize="14sp"
                            android:textColor="@color/color_text_muted"/>

                        <TextView
                            android:id="@+id/txtFecha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22/10/2025"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_text"/>
                    </LinearLayout>

                    <!-- Hora -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Hora:"
                            android:textSize="14sp"
                            android:textColor="@color/color_text_muted"/>

                        <TextView
                            android:id="@+id/txtHora"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="08:00"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_text"/>
                    </LinearLayout>

                    <!-- Personas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Personas:"
                            android:textSize="14sp"
                            android:textColor="@color/color_text_muted"/>

                        <TextView
                            android:id="@+id/txtNumPersonas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 personas"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_text"/>
                    </LinearLayout>

                    <!-- Divisor -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_outline"
                        android:layout_marginBottom="16dp"/>

                    <!-- Método de pago -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Método de pago"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_text"/>

                        <TextView
                            android:id="@+id/txtMetodoPago"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yape"
                            android:textSize="14sp"
                            android:textColor="@color/color_text"/>
                    </LinearLayout>

                    <!-- Total pagado -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total pagado"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_text"/>

                        <TextView
                            android:id="@+id/txtMontoTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/ 900"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_text"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Título del QR -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Código QR de tu reserva"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/color_text"
                android:layout_marginBottom="16dp"/>

            <!-- Card del QR -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <ImageView
                    android:id="@+id/imgQR"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="Código QR de reserva"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botón -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerMisReservas"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="VER MIS RESERVAS"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                app:backgroundTint="@color/color_primary"
                android:textColor="@color/color_on_primary"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>