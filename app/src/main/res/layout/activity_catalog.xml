<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">

    <!-- Top Bar personalizado -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/color_surface"
        android:elevation="2dp">

        <!-- Logo circular con "PE" -->
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="PE"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/circle_pe_bg"
            android:contentDescription="Peruvian Service"/>

        <!-- Nombre de la app -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Peruvian Service"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/color_text"
            android:layout_marginStart="12dp"/>

        <!-- Icono de notificaciones con badge -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp">

            <ImageView
                android:id="@+id/iv_notificaciones"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notifications"
                android:tint="@color/color_text"
                android:contentDescription="Notificaciones"/>

            <!-- Badge de notificaciones -->
            <TextView
                android:id="@+id/tv_badge_notificaciones"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:text="2"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="@drawable/circle_badge_red"
                android:layout_gravity="top|end"
                android:layout_marginTop="-4dp"
                android:layout_marginEnd="-4dp"
                android:visibility="gone"/>
        </FrameLayout>

        <!-- Icono de perfil -->
        <ImageView
            android:id="@+id/iv_perfil"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_person_24"
            android:tint="@color/color_text"
            android:contentDescription="Perfil"
            android:layout_marginEnd="12dp"/>

        <!-- Icono de logout -->
        <ImageView
            android:id="@+id/iv_logout"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_logout_24"
            android:tint="#D32F2F"
            android:contentDescription="Cerrar sesión"/>
    </LinearLayout>

    <!-- Contenido principal -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">

            <!-- Título y subtítulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descubre tu próxima aventura"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/color_text"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explora destinos increíbles con disponibilidad en tiempo real"
                android:textSize="14sp"
                android:textColor="@color/color_text_muted"
                android:layout_marginBottom="16dp"/>

            <!-- Buscador -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_search"
                        android:tint="@color/color_text_muted"
                        android:layout_marginEnd="8dp"/>

                    <EditText
                        android:id="@+id/editBuscar"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="@string/buscar_destinos"
                        android:textSize="14sp"
                        android:textColorHint="@color/color_text_muted"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:maxLines="1"/>

                    <ImageView
                        android:id="@+id/btnFiltros"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_filter_list_24"
                        android:tint="@color/color_text_muted"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Chips de categorías -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:scrollbars="none">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupCategorias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:chipSpacingHorizontal="8dp"/>
            </HorizontalScrollView>

            <!-- RecyclerView de destinos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerDestinos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="16dp"
                android:nestedScrollingEnabled="false"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>