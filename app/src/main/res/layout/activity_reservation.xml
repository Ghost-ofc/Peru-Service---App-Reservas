<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">

    <!-- Top Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_close_24"
        app:navigationIconTint="@color/color_text"
        app:title="Reservar tour"
        app:titleTextColor="@color/color_text"
        android:background="@color/color_surface"
        android:elevation="2dp"/>

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Subtítulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona fecha, hora y cantidad de personas"
                android:textSize="13sp"
                android:textColor="@color/color_text_muted"
                android:layout_marginBottom="20dp"/>

            <!-- Card del destino -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/txtDestinoNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/color_text"
                        android:textSize="18sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Fecha del tour -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha del tour"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/color_text"
                android:layout_marginBottom="12dp"/>

            <!-- Botón seleccionar fecha -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnSeleccionarFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/color_primary"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        android:tint="@color/color_primary"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/txtFechaSeleccionada"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Seleccionar fecha"
                        android:textSize="14sp"
                        android:textColor="@color/color_primary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Hora de inicio -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hora de inicio"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/color_text"
                android:layout_marginBottom="12dp"/>

            <!-- Spinner hora -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/color_outline"
                app:cardElevation="0dp">

                <Spinner
                    android:id="@+id/spinnerHora"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingHorizontal="16dp"
                    android:background="@android:color/transparent"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Cantidad de personas -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad de personas"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/color_text"
                android:layout_marginBottom="12dp"/>

            <!-- Spinner personas -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/color_outline"
                app:cardElevation="0dp">

                <Spinner
                    android:id="@+id/spinnerNumPersonas"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingHorizontal="16dp"
                    android:background="@android:color/transparent"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Cupos disponibles -->
            <TextView
                android:id="@+id/txtCuposDisponibles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/color_success_fg"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <!-- Spacer para empujar el precio y botón hacia abajo -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- Precio total -->
            <TextView
                android:id="@+id/txtPrecioTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total: S/ 450.0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/color_text"
                android:gravity="end"
                android:layout_marginBottom="16dp"/>

            <!-- Progress bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="16dp"/>

            <!-- Botón confirmar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmarReserva"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="CONFIRMAR RESERVA"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                app:backgroundTint="@color/color_primary"
                android:textColor="@color/color_on_primary"
                android:enabled="false"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>