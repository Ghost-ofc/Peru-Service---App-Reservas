<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material 3 sin action bar; usaremos MaterialToolbar en cada pantalla -->
    <style name="Theme.AppReservas" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>

        <item name="android:statusBarColor">@color/color_primary</item>
        <item name="android:navigationBarColor">@color/color_background</item>

        <item name="android:windowLightStatusBar">false</item>

        <item name="colorSurface">@color/color_surface</item>
        <item name="android:colorBackground">@color/color_background</item>
    </style>


    <style name="Shape.Rounded.Medium" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Shape.Rounded.Large" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
</resources>
